<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %>></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% flash.each do |type, message| %>
      <div><%= message %></div>
    <% end %>
    <diV class="container">
      <%= yield %>
    </div>
  </body>
</html>
